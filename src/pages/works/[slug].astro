---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { works } from "../../data/works";

export function getStaticPaths() {
  return works.map((work) => ({ params: { slug: work.slug }, props: { work } }));
}

const { work } = Astro.props;
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
---

<BaseLayout title={`${work.title} | Oitebia Studio`} description={work.synopsis}>
  <article class="panel detail">
    <p class="sense">{work.sense}</p>
    <h1>{work.title}</h1>
    <p class="tagline">{work.tagline}</p>
    <p>{work.synopsis}</p>

    <dl>
      <div>
        <dt>制作ハイライト</dt>
        <dd>{work.highlight}</dd>
      </div>
      <div>
        <dt>次のアクション</dt>
        <dd>映像ティザー公開 / 楽曲視聴導線 / TALES連携</dd>
      </div>
    </dl>

    <div class="actions">
      <a class="btn primary" href={withBase(`/novels/${work.novelSlug}`)}>小説を読む</a>
      <a class="btn" href={work.ctaUrl}>GitHub制作ログ</a>
      <a class="btn" href={withBase("/works")}>一覧に戻る</a>
    </div>
  </article>
</BaseLayout>

<style>
  .sense {
    margin: 0;
    font-size: 0.85rem;
    color: var(--accent-2);
    letter-spacing: 0.08em;
  }

  h1 {
    margin: 0.2rem 0;
    line-height: 1.3;
    font-size: clamp(1.4rem, 3.2vw, 2.4rem);
  }

  .tagline {
    margin: 0;
    color: var(--accent);
  }

  dl {
    margin: 1.2rem 0;
    display: grid;
    gap: 0.8rem;
  }

  dt {
    font-size: 0.84rem;
    color: var(--muted);
  }

  dd {
    margin: 0;
    font-size: 0.95rem;
  }

  .actions {
    display: flex;
    gap: 0.7rem;
    flex-wrap: wrap;
  }
</style>
