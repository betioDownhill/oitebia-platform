---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { works } from "../../data/works";

export function getStaticPaths() {
  return works.map((work) => ({ params: { slug: work.slug }, props: { work } }));
}

const { work } = Astro.props;
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
---

<BaseLayout title={`${work.title} | Oitebia Studio`} description={work.synopsis}>
  <article class="detail-grid">
    <section class="panel main">
      <img class="hero-thumb" src={work.thumbnail} alt={`${work.title} サムネイル`} loading="lazy" />
      <p class="sense">{work.sense}</p>
      <h1>{work.title}</h1>
      <p class="tagline">{work.tagline}</p>
      <p class="synopsis">{work.synopsis}</p>

      <div class="actions">
        <a class="btn primary" href={withBase(`/novels/${work.novelSlug}`)}>この作品の小説を読む</a>
        <a class="btn" href="https://www.youtube.com/" target="_blank" rel="noreferrer">映像公開先（準備中）</a>
      </div>
    </section>

    <aside class="panel side">
      <h2>制作ハイライト</h2>
      <p>{work.highlight}</p>
      <h2>次に見てほしいもの</h2>
      <ul>
        <li>小説本文</li>
        <li>メンバーコメント（追加予定）</li>
        <li>映像ティザー公開</li>
      </ul>
      <a class="btn" href={withBase(`/novels/${work.novelSlug}`)}>小説ページへ</a>
      <a class="btn" href={withBase("/works")}>作品一覧へ戻る</a>
    </aside>
  </article>
</BaseLayout>

<style>
  .detail-grid {
    display: grid;
    grid-template-columns: 1.8fr 1fr;
    gap: 0.95rem;
  }

  .sense {
    margin: 0;
    color: var(--ok);
    letter-spacing: 0.1em;
    font-size: 0.8rem;
    font-weight: 700;
  }

  .hero-thumb {
    width: 100%;
    aspect-ratio: 16 / 8;
    object-fit: cover;
    border-radius: 14px;
    border: 1px solid color-mix(in oklab, var(--line) 80%, transparent);
    background: #0f1b2a;
    margin-bottom: 0.6rem;
  }

  h1 {
    margin: 0.35rem 0 0;
    font-size: clamp(1.8rem, 4vw, 3.1rem);
  }

  .tagline {
    margin: 0.35rem 0 0;
    color: var(--brand);
    font-size: 1.12rem;
  }

  .synopsis {
    margin: 0.75rem 0 0;
    max-width: 70ch;
  }

  .actions {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.7rem;
  }

  .side h2 {
    margin: 0;
    font-size: 1.1rem;
  }

  .side p {
    margin: 0.3rem 0 0;
    color: var(--muted);
  }

  .side ul {
    margin: 0.35rem 0 0.8rem;
    padding-left: 1.1rem;
    color: var(--muted);
  }

  .side .btn {
    margin-top: 0.48rem;
    width: 100%;
  }

  @media (max-width: 900px) {
    .detail-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
