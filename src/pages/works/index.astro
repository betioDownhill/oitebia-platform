---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WorkCard from "../../components/WorkCard.astro";
import { works } from "../../data/works";
import { loadStudioData } from "../../lib/loadStudioData";

const studio = await loadStudioData();
---

<BaseLayout title="作品とスタジオ | Oitebia Studio">
  <section class="panel intro">
    <h1>Works & Studio</h1>
    <p>
      作品一覧に加えて、スタジオの活動状況とメンバー構成を確認できます。小説・映像・音楽を横断して進行状況を把握するためのページです。
    </p>
    {studio.fetchError && <p class="warn">スタジオ情報は現在フォールバック表示です: {studio.fetchError}</p>}
  </section>

  <section class="grid-wrap" aria-label="作品一覧">
    {works.map((work) => <WorkCard work={work} />)}
  </section>

  <section class="panel activity" aria-label="スタジオ活動">
    <h2>スタジオ活動</h2>
    <ul>
      {studio.activity.map((item) => <li>{item}</li>)}
    </ul>
    <div class="metrics">
      {studio.metrics.map((metric) => (
        <div class="metric">
          <p class="label">{metric.label}</p>
          <p class="value">{metric.value}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="panel members" aria-label="メンバー紹介">
    <h2>メンバー紹介</h2>
    <div class="member-grid">
      {studio.members.map((member) => (
        <article class="member-card">
          <img src={member.thumbnail} alt={`${member.name} サムネイル`} loading="lazy" />
          <p class="name">{member.name}</p>
          <p class="role">{member.role}</p>
          <p class="specialty">{member.specialty}</p>
          <p class="quote">{member.catchphrase}</p>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    margin: 0;
    font-size: clamp(1.8rem, 4.2vw, 3rem);
  }

  .intro p {
    margin: 0.55rem 0 0;
    color: var(--muted);
  }

  .warn {
    margin-top: 0.8rem;
    color: #ffc98e;
    font-size: 0.9rem;
  }

  .grid-wrap {
    margin-top: 1rem;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.9rem;
  }

  .activity,
  .members {
    margin-top: 1rem;
  }

  h2 {
    margin: 0;
    font-size: clamp(1.3rem, 2.8vw, 2rem);
  }

  .activity ul {
    margin: 0.55rem 0 0;
    padding-left: 1.1rem;
    color: var(--muted);
  }

  .metrics {
    margin-top: 0.85rem;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.7rem;
  }

  .metric {
    border: 1px solid color-mix(in oklab, var(--line) 80%, transparent);
    border-radius: 14px;
    padding: 0.7rem;
    background: #0f1b2a;
  }

  .metric .label {
    margin: 0;
    font-size: 0.78rem;
    color: var(--muted);
  }

  .metric .value {
    margin: 0.2rem 0 0;
    font-weight: 700;
  }

  .member-grid {
    margin-top: 0.85rem;
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .member-card {
    border: 1px solid color-mix(in oklab, var(--line) 80%, transparent);
    border-radius: 14px;
    padding: 0.65rem;
    background: #0f1b2a;
  }

  .member-card img {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 10px;
    border: 1px solid color-mix(in oklab, var(--line) 75%, transparent);
  }

  .name {
    margin: 0.45rem 0 0;
    font-weight: 700;
  }

  .role,
  .specialty,
  .quote {
    margin: 0.24rem 0 0;
    font-size: 0.86rem;
    color: var(--muted);
  }

  @media (max-width: 1020px) {
    .grid-wrap {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .member-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }

    .metrics {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 680px) {
    .grid-wrap,
    .member-grid,
    .metrics {
      grid-template-columns: 1fr;
    }
  }
</style>
