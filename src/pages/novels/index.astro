---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { novelSources } from "../../data/novelSources";

const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
---

<BaseLayout title="小説一覧 | Oitebia Studio" description="五感シリーズの小説一覧ページです。">
  <section class="panel intro">
    <h1>Novel Library</h1>
    <p>読みたい作品を選んで本文へ進めます。各作品にサムネイルを配置し、今後差し替えできる構成にしています。</p>
  </section>

  <section class="grid" aria-label="小説一覧">
    {novelSources.map((novel) => (
      <article class="panel card">
        <img src={novel.thumbnail} alt={`${novel.workTitle} サムネイル`} loading="lazy" />
        <p class="sense">{novel.sense}</p>
        <h2>{novel.workTitle}</h2>
        <p class="teaser">{novel.teaser}</p>
        <a class="btn primary" href={withBase(`/novels/${novel.slug}`)}>本文を読む</a>
      </article>
    ))}
  </section>
</BaseLayout>

<style>
  h1 {
    margin: 0;
    font-size: clamp(1.8rem, 4.2vw, 3rem);
  }

  .intro p {
    margin: 0.55rem 0 0;
    color: var(--muted);
  }

  .grid {
    margin-top: 1rem;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.9rem;
  }

  .card {
    display: grid;
    gap: 0.45rem;
  }

  .card img {
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 12px;
    border: 1px solid color-mix(in oklab, var(--line) 80%, transparent);
    object-fit: cover;
    background: #0f1b2a;
  }

  .sense {
    margin: 0;
    color: var(--ok);
    letter-spacing: 0.08em;
    font-size: 0.78rem;
    font-weight: 700;
  }

  h2 {
    margin: 0;
    font-size: 1.28rem;
  }

  .teaser {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 980px) {
    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 680px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
