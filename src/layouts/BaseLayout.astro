---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Oitebia Studio",
  description = "世界のサインを、物語・歌・映像へ。"
} = Astro.props;

const currentPath = Astro.url.pathname;
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
const isActive = (path: string) => {
  const target = withBase(path);
  return path === "/" ? currentPath === target : currentPath.startsWith(target);
};
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Zen+Old+Mincho:wght@400;700&display=swap");

      :root {
        --bg: #091019;
        --bg-2: #101a27;
        --panel: #122033cc;
        --line: #2a3d55;
        --text: #f2f7ff;
        --muted: #acc0d8;
        --brand: #ffd279;
        --link: #9be4ff;
        --link-hover: #d0f3ff;
        --link-visited: #ffd98a;
        --focus: #ffb84d;
        --ok: #7ce5c7;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        color: var(--text);
        background:
          radial-gradient(1200px 540px at -8% -12%, #294565 0%, transparent 52%),
          radial-gradient(880px 420px at 100% 0%, #5a2e2f 0%, transparent 52%),
          linear-gradient(180deg, var(--bg) 0%, var(--bg-2) 100%);
        font-family: "Noto Sans JP", sans-serif;
        line-height: 1.75;
      }

      h1,
      h2,
      h3 {
        font-family: "Zen Old Mincho", serif;
        line-height: 1.35;
        letter-spacing: 0.01em;
      }

      a {
        color: var(--link);
        text-decoration-thickness: 2px;
        text-underline-offset: 3px;
      }

      a:visited {
        color: var(--link-visited);
      }

      a:hover {
        color: var(--link-hover);
      }

      a:focus-visible,
      button:focus-visible {
        outline: 3px solid var(--focus);
        outline-offset: 3px;
        border-radius: 8px;
      }

      .skip {
        position: absolute;
        left: 0.8rem;
        top: -100px;
        z-index: 50;
        background: #fefefe;
        color: #10151d;
        font-weight: 700;
        padding: 0.45rem 0.7rem;
        border-radius: 8px;
      }

      .skip:focus {
        top: 0.8rem;
      }

      .shell {
        width: min(1140px, 92vw);
        margin: 0 auto;
      }

      header.site-header {
        position: sticky;
        top: 0;
        z-index: 20;
        border-bottom: 1px solid color-mix(in oklab, var(--line) 85%, transparent);
        background: color-mix(in oklab, #0b121d 78%, transparent);
        backdrop-filter: blur(8px);
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.2rem;
        padding: 0.95rem 0;
      }

      .brand {
        color: var(--text);
        text-decoration: none;
        font-family: "Zen Old Mincho", serif;
        font-size: 1.25rem;
        letter-spacing: 0.03em;
      }

      .brand:visited {
        color: var(--text);
      }

      .nav-list {
        list-style: none;
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
      }

      .nav-link {
        color: var(--text);
        text-decoration: none;
        border-radius: 999px;
        padding: 0.42rem 0.78rem;
        min-height: 44px;
        display: inline-flex;
        align-items: center;
        border: 1px solid transparent;
      }

      .nav-link:visited {
        color: var(--text);
      }

      .nav-link:hover {
        border-color: var(--line);
        background: color-mix(in oklab, #ffffff 8%, transparent);
      }

      .nav-link.current {
        border-color: color-mix(in oklab, var(--brand) 65%, var(--line));
        color: var(--brand);
      }

      main {
        padding: 2rem 0 4rem;
      }

      .panel {
        background: linear-gradient(180deg, #14243acc 0%, #122033c7 100%);
        border: 1px solid color-mix(in oklab, var(--line) 80%, transparent);
        border-radius: 22px;
        box-shadow: inset 0 1px 0 #ffffff12;
        padding: 1.25rem;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-height: 44px;
        padding: 0.62rem 1rem;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 600;
        border: 1px solid var(--line);
        color: var(--text);
        background: #1a2a3f;
      }

      .btn:visited {
        color: var(--text);
      }

      .btn:hover {
        color: var(--text);
        background: #223852;
      }

      .btn.primary {
        border: none;
        color: #1c1202;
        background: linear-gradient(120deg, var(--brand), #ffab78);
      }

      .btn.primary:visited {
        color: #1c1202;
      }

      .btn.primary:hover {
        background: linear-gradient(120deg, #ffdc95, #ffb78d);
      }

      .muted {
        color: var(--muted);
      }

      footer {
        border-top: 1px solid color-mix(in oklab, var(--line) 85%, transparent);
        color: var(--muted);
        padding: 1.4rem 0 3rem;
        font-size: 0.86rem;
      }

      @media (max-width: 780px) {
        nav {
          flex-direction: column;
          align-items: flex-start;
        }

        .nav-list {
          flex-wrap: wrap;
          gap: 0.7rem;
        }
      }
    </style>
  </head>
  <body>
    <a class="skip" href="#main-content">本文へスキップ</a>
    <header class="site-header">
      <div class="shell">
        <nav>
          <a class="brand" href={withBase("/")}>Oitebia Studio</a>
          <ul class="nav-list">
            <li>
              <a class:list={["nav-link", isActive("/") && "current"]} href={withBase("/")}>Top</a>
            </li>
            <li>
              <a class:list={["nav-link", isActive("/works") && "current"]} href={withBase("/works")}>Works</a>
            </li>
            <li>
              <a class:list={["nav-link", isActive("/novels") && "current"]} href={withBase("/novels")}>Novel</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main-content">
      <div class="shell">
        <slot />
      </div>
    </main>
    <footer>
      <div class="shell">Oitebia Studio / Founded 2026</div>
    </footer>
  </body>
</html>
